---
title: Cryptobeers -- by Cryptominded
---

<%= partial 'partials/home-hero' %>

<div class="wrapper-large">

  <div class="ta-center">
    <h3 class="fw-semibold">Upcoming this month</h3>
  </div>

  <div class="events">
    <% group_by_month(data.events).each do |month, articles| %>

      <div class="ta-center months">
    	<h4 class="fw-semibold"><%= month %></h4>
      </div>

      <% articles.each do |article| %>
        <div class="events__card">
	  <div class="image">
	    <a href="<%= article.meetup_link %>">
	      <img src="<%= article.image %>" width="320" height="220">
	      <div class="overlay"><button class="btn--secondary">RSVP</button></div>
	    </a>
	  </div>
	  <div class="details">
	    <span class="date"><%= article.strftime('%A, %e %B %Y') %></span> â€¢ <span class="city"><%= article.City %></span>
	    <a href="<%= article.meetup_link %>"><h4><%= article.title %></h4></a>
	    <%= article.body %>
	    <span class="organisor"><strong>Organised by:</strong> <%= article.organised_by %></span>
	    <span class="sponsor"><strong>Made possible by:</strong> <%= article.possible_by %></span>
	  </div>
        </div>

      <% end %>
    <% end %>
  </div>

</div>
